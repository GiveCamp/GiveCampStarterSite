<!DOCTYPE html>
<html>
<head>
    <title>@GiveCampStarterSite.SiteSettings.Instance.EmailSubjectPrefix: @ViewBag.Title
    </title>
    
    <link href="@Url.Content("~/Content/cssreset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Themes/" + GiveCampStarterSite.SiteSettings.Instance.Theme + "/Site.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/tinymce.3.4.5/tiny_mce.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/tinymce.3.4.5/jquery.tinymce.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/tinymce.3.4.5/jquery-ui-1.8.16.min.js")" type="text/javascript"></script>
</head>
<body>
    <!-- start new header -->
    <div id="wrap">
        <div id="header">
            <div id="logo">
                <a href="/">
                    <img src="/Content/GiveCamp_FINAL_small.png" title="GiveCamp" alt="GiveCamp.org" /></a>
                <p>
                    @GiveCampStarterSite.SiteSettings.Instance.SubTitle</p>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menu">
                <ul>
                    <li id="navHome">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li id="navVolunteer">@Html.ActionLink("Volunteer", "Index", "Volunteer")</li>
                    <li id="navCharity">@Html.ActionLink("Charity", "Index", "Charity")</li>
                    <li id="navSponsor">@Html.ActionLink("Sponsor", "Index", "Sponsor")</li>
                    <li id="navAbout">@Html.ActionLink("About", "About", "Home")</li>
                    @if (User.IsInRole("Administrator"))
                    {
                        <li id="navSettings">@Html.ActionLink("Settings", "Index", "Settings")</li>    
                    }
                </ul>
            </div>
        </div>
        <!-- start page -->
        <div id="page">
            <!-- start content -->
            <div id="content">
                @RenderBody()
            </div>
            <div id="sidebar">
                @RenderSection("SideBar", false)
            </div>
            <div style="clear: both;">
                &nbsp;</div>
        </div>
        <div id="footer">
            <p>
                &copy;2009 All Rights Reserved. &nbsp;&bull;&nbsp; Design by <a href="http://www.freecsstemplates.org/">
                    Free CSS Templates</a> &nbsp;&bull;&nbsp; Icons by <a href="http://www.famfamfam.com/">
                        FAMFAMFAM</a>.</p>
        </div>
    </div>
</body>
</html>
